<div class="row">
  <div id="container p-5">
    <h1 class="text-center mt-4">DOCTORES</h1>
  </div>
  {{#each doctores}}
    <div class="col-md-3 mt-4">
      <div class="card">
        <div class="card-body">
          <h3>{{nombre}} {{apellido}}</h3>
          <p class="mt-4"><b>Especialidad: </b>{{especialidad}}</p>
          <p><b>Consultorio:</b> {{consultorio}}</p>
          <p><b>Correo: </b>{{correo}}</p>
        </div>
        <div
          class="card-footer d-flex justify-content-between align-items-center"
        >
          <a href="/doctores/delete/{{_id}}" class="btn btn-danger">
            Delete
          </a>
          <a href="/doctores/edit/{{_id}}" class="btn btn-secondary">
            Edit
          </a>
        </div>
      </div>
    </div>
  {{else}}
    <p class="text-white display-3 text-center my-5">There are no Tasks</p>
  {{/each}}
</div>