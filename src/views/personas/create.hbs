<div class="row">
  <div class="col-md-6 offset-md-3 mt-5">
    <div class="card">
      <div class="card-body">
        <form action="/personas/create" method="POST">
          <div class="mb-3 text-center">
            <h4>Creacion Personas</h4>
          </div>
          <div class="mb-3">
            <!--<label for="title">Nombre</label>-->
            <input
              type="text"
              name="nombre"
              placeholder="Nombre"
              class="form-control mb-3"
              autofocus
            />
            <div class="mb-3">
              <!--<label for="description">Apellido</label>-->
              <input
                type="text"
                name="cedula"
                placeholder="Cedula"
                class="form-control mb-3"
              />
            </div>
            <div class="mb-3">
              <!--<label for="description">Apellido</label>-->
              <input
                type="text"
                name="apellido"
                placeholder="Apellido"
                class="form-control mb-3"
              />
            </div>
            <div class="mb-3">
              <!--<label for="description">Apellido</label>-->
              <input
                type="text"
                name="edad"
                placeholder="Edad"
                class="form-control mb-3"
              />
            </div>
            <div class="mb-3">
              <!--<label for="description">Apellido</label>-->
              <input
                type="text"
                name="telefono"
                placeholder="Telefono"
                class="form-control mb-3"
              />
            </div>
            <button
              type="submit"
              class="form-control btn btn-primary btn-block"
            >Guardar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>